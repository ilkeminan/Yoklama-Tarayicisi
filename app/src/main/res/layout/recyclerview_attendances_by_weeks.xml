<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardBackgroundColor="@color/blue_dark_in">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue_dark_in"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewStudentNumber_LTABW"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageViewWeek1_LTABW"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/imageViewWeek2_LTABW"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:src="@mipmap/ic_launcher" />


        <ImageView
            android:id="@+id/imageViewWeek3_LTABW"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/imageViewWeek4_LTABW"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/imageViewWeek5_LTABW"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>

</android.support.v7.widget.CardView>