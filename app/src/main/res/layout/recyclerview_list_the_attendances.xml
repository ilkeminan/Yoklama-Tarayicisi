<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/blue_dark_in"
    app:cardBackgroundColor="@color/blue_dark_in">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue_dark_in"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewStudentNumber_attendances"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:text="Student Number"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewNumberOfAbsenteeism"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:text="Absenteeism"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewNumberOfFakeSignatures"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:text="Fake"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />


    </LinearLayout>

</android.support.v7.widget.CardView>